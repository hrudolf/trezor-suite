{
    "name": "@trezor/connect-webextension",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "lint:js": "yarn g:eslint '**/*.{ts,tsx,js}'",
        "test:e2e": "yarn xvfb-maybe -- playwright test --config=./e2e/playwright.config.ts",
        "prepare": "node updateWebextensions.js",
