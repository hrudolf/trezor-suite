        "only:build": "rimraf build && TS_NODE_PROJECT=\"tsconfig.json\" yarn webpack --config ./webpack/prod.webpack.config.ts"
    },
    "devDependencies": {
        "@playwright/test": "^1.35.1",
        "@trezor/node-utils": "workspace:*",
        "@trezor/trezor-user-env-link": "workspace:*",
        "@types/react": "^18.2.15",
        "copy-webpack-plugin": "^11.0.0",
        "html-webpack-plugin": "^5.5.3",
        "rimraf": "^5.0.1",
        "typescript": "^5.1.6",
        "webpack": "^5.88.2",
        "webpack-cli": "^5.1.4",
        "webpack-merge": "^5.9.0",
        "webpack-plugin-serve": "^1.6.0",
        "xvfb-maybe": "^0.2.1"
    },
    "dependencies": {
        "@trezor/connect-explorer": "workspace:^",
        "@trezor/connect-web": "workspace:^",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.14.2"
    }
