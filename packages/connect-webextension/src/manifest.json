{
    "name": "@trezor/connect-webextension",
    "manifest_version": 3,
    "version": "1.0.0",
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://connect.trezor.io/9/popup.html",
                "*://suite.corp.sldev.cz/connect/develop/popup.html",
                "http://*/*"
            ],
            "js": ["./vendor/trezor-content-script.js"]
        }
    ],
    "background": {
        "service_worker": "serviceWorker.bundle.js"
    }
}
